html(ng-app="kidnava")
  head
    meta(charset='utf8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    base(href='/')
    title Kidnava App
  body
    div.span4(background=public/img/login_page.jpg)
      div.row-fluid
        div.span2
          div.title
             | {{title}}
        div.row.loginContainer
          div.well
            legend
              div.signInTitle.
                  Sign In
            a(href="/auth/google")
              div#gSignInWrapper
              div#customBtn.customGPlusSignIn
                span.icon
                span.buttonText Google

  link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Roboto', type="text/css")
  link(rel='stylesheet', href='/stylesheets/login.css')   
  link(rel='stylesheet', href='/stylesheets/bootstrap-3.1.0/dist/css/bootstrap.min.css');
  script(src='ext/angular-1.2.11/angular.min.js')
  script(src="ext/angular-1.2.11/angular-route.min.js")
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')



