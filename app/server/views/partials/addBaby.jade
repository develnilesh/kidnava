appnavigation  
div
    div.title Add your Baby
    form.form-horizontal.form_wide(role="form", name="addBabyForm")
      div.form-group
        label.col-sm-2.control-label Spouse Email
        div.col-sm-10
          input.form-control(type="email",required, ng-model="baby.parent", ng-change="onSpouseChange()", bs-typeahead="knownEmails", placeholder="Spouse Email")
      div.form-group
        label.col-sm-2.control-label Gender
        div.col-sm-10.controls
          input.gender_input(type="radio", ng-model="baby.gender", name="baby", value="girl")
          | Girl 
          br
          input.gender_input(type="radio", ng-model="baby.gender", name="baby", value="boy")
          | Boy 
          br
          input.gender_input(type="radio", ng-model="baby.gender", name="baby", value="secret", checked)
          | Secret 
          br
      div.form-group
        label.col-sm-2.control-label Friend Emails:
        div.col-sm-10
          input.form-control(type="text", ng-model="baby.guardians", placeholder="comma-separated")
      div.form-actions.col-sm-offset-2.col-sm-10
        button.btn.btn-primary(type=submit,ng-click="addYourBaby(baby)", ng-disabled="addBabyForm.$invalid") Add Child
        &nbsp;
        button.btn Cancel
link(rel='stylesheet', href='/stylesheets/add_baby.css')   